            </div>
            <!-- for table -->
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <h2>read from db</h2>
                        </div>
                        <div class="card-body">
                            <div class=card-tittle>
                                <h3>Announcements display table</h3>
                            </div>
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Poster Name</th>
                                        <th scope="col">Post Content</th>
                                        <th scope="col">Ann ID</th>
                                        <th scope="col">Del this ann</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0;i<announcements.length;i++) { %>
                                    <tr>
                                        <th scope="row"><% i %></th>
                                        <td><%= announcements[i].posterName %></td>
                                        <td><%= announcements[i].postContent %></td>
                                        <td><%= announcements[i].id %></td>
                                        <td><button class="delBtn btn btn-primary" type="button"
